{
  "name": "browser-agent",
  "version": "0.2.0",
  "private": true,
  "description": "Chrome MV3 extension scaffold with TypeScript",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "css:popup": "tailwindcss -i styles/popup.css -o public/popup/popup.css --minify",
    "css:options": "tailwindcss -i styles/options.css -o public/options/options.css --minify",
    "css:watch": "concurrently -n popup,options -c green,cyan \"tailwindcss -i styles/popup.css -o public/popup/popup.css --watch\" \"tailwindcss -i styles/options.css -o public/options/options.css --watch\"",
    "css:build": "pnpm run css:popup && pnpm run css:options",
    "build": "pnpm run css:build && tsup",
    "dev": "concurrently -n ts,css -c magenta,blue \"tsup --watch --sourcemap\" \"pnpm run css:watch\"",
    "clean": "rimraf build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "check": "pnpm run typecheck && pnpm run lint",
    "build:check": "pnpm run check && pnpm run build"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.12",
    "@tsconfig/svelte": "^5.0.4",
    "@types/chrome": "^0.0.266",
    "@typescript-eslint/eslint-plugin": "^8.6.0",
    "@typescript-eslint/parser": "^8.6.0",
    "autoprefixer": "^10.4.21",
    "esbuild-svelte": "^0.8.2",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "concurrently": "^9.0.1",
    "postcss": "^8.5.6",
    "rimraf": "^5.0.5",
    "svelte": "^4.2.19",
    "tailwindcss": "^4.1.12",
    "tsup": "^8.1.0",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@openai/agents": "^0.0.17",
    "openai": "^5.16.0",
    "svelte-icons-pack": "^3.1.3",
    "zod": "3"
  }
}
