{
  "manifest_version": 3,
  "name": "Open Browser Agent",
  "description": "MV3 extension scaffold with popup and options to store API key and launch actions.",
  "version": "0.1.0",
  "action": {
    "default_title": "Open Browser Agent"
  },
  "side_panel": {
    "default_path": "public/popup/popup.html"
  },
  "options_page": "public/options/options.html",
  "background": {
    "service_worker": "build/background.global.js"
  },
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "tabs",
    "debugger",
    "sidePanel"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}

